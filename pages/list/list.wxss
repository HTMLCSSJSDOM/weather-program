.date-item{
  display: flex;
  align-items: center;
  margin: 0 40rpx;
  padding: 30rpx 0;
  border-bottom: 4rpx solid rgba(0,0,0,0.1);
  font-size: 30rpx;
  line-height: 42rpx;
}
.day{
  font-size: 40rpx;
  line-height: 56rpx;
}
.date{
  opacity: 0.6;
}
.temp{
  flex-grow: 1;
  text-align: center;
}
.weather-icon{
  width: 90rpx;
  height: 90rpx;
}